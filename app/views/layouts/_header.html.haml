%header
  = link_to logo, root_path
  %nav_left.round
    %ul
      - if current_user
        %li= link_to "My lists", lists_path
      - else
        %li= link_to "Home", root_path
        %li= link_to "Tour", tour_path
        %li= link_to "Blog", blog_path
        %li= link_to "Plans", plans_path
        
  %nav_right.round
    %ul
      - if current_user
        = @user[:email]
        %li= link_to "Settings", settings_path
        %li= link_to "Logout", logout_path
      - else
        %li Already a member? 
        =link_to "Log in", login_path