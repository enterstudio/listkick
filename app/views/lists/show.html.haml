.list
  .title
    = @list[:name]
  .operations  
    = link_to "Edit", edit_list_path
    = link_to "Delete", list_path, :method => :delete,
                                   :confirm => "Are you sure?",
                                   :title => @list[:name]
    
  %ul.items
    - unless @items.empty?
      = render @items
  
  .add_item
    = render 'shared/item_form'